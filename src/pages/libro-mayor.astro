---
export const prerender = false;
import BaseLayout from '../layouts/BaseLayout.astro';
import LibroMayorClient from '../components/accounting/LibroMayorClient';
import { BookOpenText, Edit3 } from 'lucide-react';
---

<BaseLayout title="Libro Mayor">
  <section
    class="pt-6 pb-6 px-6 md:px-8 bg-white border-2 border-brand-300 rounded-2xl shadow-lg"
  >
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <BookOpenText className="text-brand-700" size={40} />
        <h1
          class="text-4xl md:text-5xl font-extrabold tracking-tight text-brand-700"
        >
          Libro Mayor
        </h1>
      </div>
      <a
        href="/asientos"
        class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-emerald-600 hover:bg-emerald-700 text-white text-sm font-semibold shadow-md"
      >
        <Edit3 size={16} />
        Registrar Asiento
      </a>
    </div>
    <p class="mt-4 text-gray-800 max-w-2xl text-lg">
      Movimientos y saldos por cuenta contable.
    </p>
  </section>

  <LibroMayorClient client:load />
</BaseLayout>
